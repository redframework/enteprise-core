            });

            Red.select(alert_retry_button).mouseLeave(function () {
                $(alert_retry_button).animate({"opacity": "0.68"}, 700);
            });

            Red.select(alert_retry_button).innerHTML('Retry');

            Red.select(alert_retry_button).click(function () {
                Red.redirect(window.location);
            });

            $(alert_cover).fadeIn(700);

            Red.select(alert_close_button).click(function () {
                $(alert_cover).fadeOut(400);
                var time_handler = function () {
