        <div id="project-information-container" style="font-size: small;line-height: 17px;float:left;width: 28%;position: relative;text-align: center;margin-bottom:30px;">
            <div id="project-information-title"
                 style="position: relative;direction: ltr;padding: 3px;text-align: center;box-shadow: 0 0 0.625vw 0 rgba(0,0,0,0.24);margin-top: 5px;height: 35px;margin-left: 15px;width: 90%;background-color: rgba(226,90,90,0.86)">
                <img draggable="false" src="{{ rootPath() }}public/Red/Images/project_info.png" style="width: 25px;height: 25px;margin-right: 5px;margin-top: 6px"
                     alt="Project Information">
                <span id="project-information-text" style="color: #ffffff;font-size: 12px;position:relative;top: -8px;margin-top: 4px">Project Information</span>
            </div>

            <div id="project-information" style="height: 43.0625vw;width: 89%;box-shadow: 0 0 0.625vw 0 rgba(0,0,0,0.19);position:sticky;top: 20px;direction: ltr;padding: 5px;text-align: center;margin-top: 10px;margin-left: 15px;">

            {{ config() }}

            </div>

        </div>



        <div id="server-analyse-container" style="font-size: small;position: relative;float: left;width: 70%;line-height: 17px">
            <div id="server-analyze-title"
