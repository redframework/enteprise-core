    });
</script>

{% block script %}
    <script>

        Red.app.addController("main", "notfound", function () {

        });

        Red.ready(function () {

            var error_code = $("#error-code");

            var not_found_caption = $("#not-found-caption");
            var not_found_image = $("#not-found-image");

            var home_button = $("#home-button");

            home_button.hover(function () {
                home_button.stop(true).animate({"opacity": '1.0'}, 400);
            }, function () {
                home_button.stop(true).animate({"opacity": '0.68'}, 400);

            });

            home_button.click(function () {
                window.location = '{{ rootPath() }}';
            });

            for (var counter = 0;counter <= 404; counter++){

                let i = counter;

                setTimeout(function () {
                    error_code.html(i);

                    if (i === 404){
                        $("#looking-for-error").hide(600);
                        $("#not-found-container").show(1000);


                        not_found_caption.show(1000);
                        not_found_caption.animate({"left": '0'}, 1000);


                        resizeHandler(not_found_image, not_found_caption, home_button);
                    }

                }, counter * 5);
            }


            $(window).on("resize", function () {
                resizeHandler(not_found_image, not_found_caption, home_button)
            });

            function resizeHandler(not_found_image, not_found_caption, home_button){
                if ($(window).outerWidth() <= 800) {
                    not_found_image.css({"float": "unset", "text-align": "center", "width": "60%"});
                    not_found_caption.css({"float": "unset", "text-align": "center", "border": "unset"});
                    home_button.css({"margin-top": "3%"});
                } else {
                    not_found_image.css({"float": "left", "text-align": "left", "width": "38%"});
                    not_found_caption.css({
                        "float": "left",
                        "text-align": "left",
                        "border-left": "4px rgba(226,90,90,0.85) solid"
                    });
                    home_button.css({"margin-top": "25%"});

                }
            }


        });
    </script>

