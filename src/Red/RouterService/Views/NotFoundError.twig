<body red-app="main" style="box-shadow: 0 0 0.625vw 0 rgba(0,0,0,0.24);border-radius: 5px">

{% block header %}

    <div id="header"
         style="box-shadow: 0 0 0.625vw 0 rgba(0,0,0,0.24);-moz-user-select: -moz-none;-webkit-user-select: none;-ms-user-select: none;user-select: none;position:relative;height: 180px;max-height: 180px;background-image: url('{{ rootPath() }}public/Red/Images/Header_Background.jpg');
                 background-size: cover;width: 100%;margin: auto;border-radius: 5px 5px 0 0;opacity: 0.82">
        <div id="particles" style="width: 80%;height: 180px;max-height: 180px;position: absolute;right: 0;"></div>
        <img alt="Red Framework" draggable="false"
             src="{{ rootPath() }}public/Red/Images/Red_Framework_Logo_For_Header.png"
             style="height: 120px;width: 120px;margin-top: 30px;float: left">
        <div style="font-size: 22px;text-shadow: 0 0 0.625vw 0 rgba(0,0,0,0.50);color:#ffffff;padding-top: 60px;">Red
            Framework
        </div>
        <div style="text-shadow: 0 0 0.625vw 0 rgba(0,0,0,0.50);color:#ffffff;padding-top: 14px;">Enterprise
            Applications
            Host
        </div>
    </div>

{% endblock %}

{% block content %}

    <div red-controller="notfound" id="content" style="min-height: 200px;margin-top: 30px;text-shadow: black 0 0 1px">

        <div id="error-container" style="-moz-user-select: -moz-none;-webkit-user-select: none;-ms-user-select: none;user-select: none;position:relative;margin: auto;text-align: center">
            <div id="looking-for-error">
                <div id="looking-for-error-image-container">
                    <img draggable="false" style="font-size: 35px;width: 120px;height: 120px;" src="{{ rootPath() }}public/Red/Images/loading.gif" alt="Loading">
                </div>
                <div>
                    Looking for Error Code :
                    <div id="error-code" style="margin-top: 10px;text-shadow: black 0 0 0;color: #E25A5A;font-weight: bold;font-size: 35px;">0</div>
                </div>
            </div>
            <div id="not-found-container" style="display: none;margin: auto;text-align: center">
                <img id="not-found-image" style="position: relative;width: 38%;float: left;margin-right: 10%;margin-left: 10%" draggable="false" src="{{ rootPath() }}public/Red/Images/Not_Found_Error.png" alt="Not Found">
                <div id="not-found-caption"
                     style="display: none;left: 200px;position: relative;text-align: left;border-left: 4px rgba(226,90,90,0.85) solid;border-radius: 3px;float: left;margin-top: 4%;padding-left: 2%;padding-bottom: 0.4%">
                    <h3 style="line-height: 28px">404 Page Not Found Error
                    </h3>
                    <br/>
                    <button id="home-button" style="margin-top: 25%;margin-right: auto;background-color: transparent;border: 1.2px rgb(226,90,90) solid;border-radius: 3px;padding: 5px;cursor: pointer;color: rgb(226,90,90);
            width: 80px;height: 30px;opacity: 0.68;">Go Home
                    </button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}


{% block footer %}

    <hr style="clear: both;width: 95%;text-align: center;margin-top: 20px;">

    <div id="footer" style="padding-bottom: 15px;margin-top: 20px;">
        <div style="text-shadow: black 0 0 1px;text-align: center">Honored to host your Application, Red Framework
            2019
        </div>
    </div>

{% endblock %}

<script src="{{ rootPath() }}public/Library/jquery/jquery-3.3.1.min.js"></script>
<script src="{{ rootPath() }}public/Red/JS/particles.min.js"></script>
{{ RedJS() | raw }}

