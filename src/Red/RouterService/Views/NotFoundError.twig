                'color': 'white',
                'padding-top': '12px'
            });

            Red.select(alert_design).innerHTML(title);

            var alert_message = Red.create('div', alert_container, {
                'direction': 'ltr',
                'max-width': '100%',
                'max-height': '100%',
                'position': 'relative',
