        <div id="message-tab"
             style="border-radius: 0 0 5px 5px;padding: 8px 7px 8px 7px;text-align: center;font-size: 14px;float: left;position:relative;margin-left: 39px;cursor: pointer;">
            <span id="message-length" style="font-size: 12px;border: 1px solid;padding: 3.4px;border-radius: 50%">{{ messages | length }}</span>
            <span
                    id="message-caption" style="margin-left: 4px">Message</span>
        </div>

        <div id="project-tab"
             style="border-radius: 0 0 5px 5px;padding: 8px 7px 7px 7px;margin-left: 10px;font-size: 14px;float: left;position:relative;cursor: pointer;">
            <span id="project-caption">Project</span>
        </div>

        <div id="database-tab"
             style="border-radius: 0 0 5px 5px;padding: 8px 7px 8px 7px;font-size: 14px;float: left;position:relative;margin-left: 10px;cursor: pointer;">
            <span id="database-caption">Database</span>
        </div>

        <div id="query-tab"
             style="border-radius: 0 0 5px 5px;padding: 8px 7px 8px 7px;font-size: 14px;float: left;position:relative;margin-left: 10px;cursor: pointer;">
            <span id="query-caption">Query</span>
        </div>

        <div id="session-tab"
             style="border-radius: 0 0 5px 5px;padding: 8px 7px 8px 7px;font-size: 14px;float: left;position:relative;margin-left: 10px;cursor: pointer;">
            <span id="session-caption">Session</span>
        </div>

        <div id="request-tab"
             style="border-radius: 0 0 5px 5px;padding: 8px 7px 8px 7px;font-size: 14px;float: left;position:relative;margin-left: 10px;cursor: pointer;">
            <span id="request-caption">Request</span>
